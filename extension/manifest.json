{
  "manifest_version": 3,
  "name": "ChatGPT Memory Manager",
  "version": "1.0",
  "description": "Intelligently saves and recalls your ChatGPT conversations",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chatgpt-memory-manager-production.up.railway.app/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["js/content.js"],
      "css": ["css/styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
